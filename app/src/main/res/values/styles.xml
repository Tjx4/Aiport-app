<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TransStatusBarTheme" parent="NoActionBarTheme">
    </style>
    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkerText</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@color/lightBackground</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:color">@color/darkerText</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="airportAppButton">
        <item name="android:layout_width">@dimen/departure_button_size</item>
        <item name="android:layout_height">@dimen/departure_button_size</item>
        <item name="android:paddingLeft">@dimen/departure_button_padding</item>
        <item name="android:paddingRight">@dimen/departure_button_padding</item>
    </style>
    <style name="mediumButton" parent="airportAppButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="airportAppTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="largeTextView" parent="airportAppTextView">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="largeLightTextView" parent="largeTextView">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="largeDarkTextView" parent="largeTextView">
        <item name="android:textColor">@color/darkestText</item>
    </style>
    <style name="mediumTextView" parent="airportAppTextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="mediumLightTextView" parent="mediumTextView">
        <item name="android:textColor">@color/lighterText</item>
    </style>
    <style name="mediumDarkEditText" parent="mediumTextView">
        <item name="android:textColor">@color/darkerText</item>
    </style>
    <style name="searchContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_marginBottom">@dimen/large_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_view_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_view_margin</item>
        <item name="android:padding">@dimen/small_view_padding</item>
        <item name="android:background">@drawable/search_container_background</item>
    </style>

    <style name="searchButton">
        <item name="android:layout_width">@dimen/search_button_size</item>
        <item name="android:layout_height">@dimen/search_button_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CollapsedAppBarLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/lightestText</item>
    </style>

</resources>