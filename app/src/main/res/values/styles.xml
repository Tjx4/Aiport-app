<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TransStatusbarTheme" parent="NoActionBarTheme">
    </style>
    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkerText</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@color/lightestBackground</item>
        <item name="android:windowBackground">@color/lightestBackground</item>
        <item name="android:color">@color/darkerText</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="airportAppTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="largeTextView" parent="airportAppTextView">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="largeLightTextView" parent="largeTextView">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="largeDarkTextView" parent="largeTextView">
        <item name="android:textColor">@color/darkestText</item>
    </style>
    <style name="mediumTextView" parent="airportAppTextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="mediumLightTextView" parent="mediumTextView">
        <item name="android:textColor">@color/lighterText</item>
    </style>
    <style name="mediumDarkEditText" parent="mediumTextView">
        <item name="android:textColor">@color/darkerText</item>
    </style>
</resources>