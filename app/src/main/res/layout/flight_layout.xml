<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="vertical"
            android:background="@color/lightBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/flight_row1_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:id="@+id/detailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgUserProfpic"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_plane"/>

                    <TextView
                        android:id="@+id/tvAirportName"
                        style="@style/airLineTextView"
                        android:layout_toRightOf="@+id/imgUserProfpic"
                        android:layout_toLeftOf="@+id/llDepartureDestinationContainer"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="South Arican Airways"/>

                    <LinearLayout
                        android:id="@+id/llDepartureDestinationContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/imgDepartureDestinationIndicator"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/red_dot_x2"/>

                        <TextView
                            android:id="@+id/tvDepartureDestination"
                            style="@style/smallDarkTextView"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:text="Departed"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsContainer"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    style="@style/flightInfContainer"
                    android:layout_weight="1">

                    <TextView
                        style="@style/smallDarkTextView"
                        android:text="Departure Time"/>

                    <TextView
                        android:id="@+id/tvDepartureTime"
                        style="@style/airLineTextView"
                        android:text="05:30"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/flightInfContainer"
                    android:layout_weight="1">

                    <TextView
                        style="@style/smallDarkTextView"
                        android:text="Flight Number"/>

                    <TextView
                        android:id="@+id/tvFlightNumber"
                        style="@style/airLineTextView"
                        android:text="SA303"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/flightInfContainer"
                    android:layout_weight="1">

                    <TextView
                        style="@style/smallDarkTextView"
                        android:text="Destination"/>

                    <TextView
                        android:id="@+id/tvDestination"
                        style="@style/airLineTextView"
                        android:text="Cape Town"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>