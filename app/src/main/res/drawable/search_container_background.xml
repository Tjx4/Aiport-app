<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle"
            android:padding="10dp">
            <solid android:color="@color/lightBackground"/>

            <stroke
                android:width="0dp"
                android:color="@color/lightBackground" />

            <corners
                android:bottomRightRadius="@dimen/search_container_radius"
                android:bottomLeftRadius="@dimen/search_container_radius"
                android:topLeftRadius="@dimen/search_container_radius"
                android:topRightRadius="@dimen/search_container_radius"/>
        </shape>
    </item>
</selector>