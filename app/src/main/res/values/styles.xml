<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TransStatusbarTheme" parent="NoActionBarTheme">
    </style>
    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@color/darkestBackground</item>
        <item name="android:windowBackground">@color/darkestBackground</item>
        <item name="android:color">#cccccc</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="teamManagerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="largeLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="largeLightLabel" parent="largeLabel">
        <item name="android:textColor">@color/lightestText</item>
    </style>
    <style name="largeDarkLabel" parent="largeLabel">
        <item name="android:textColor">@color/darkestText</item>
    </style>
    <style name="mediumLabel" parent="teamManagerTextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="mediumLightLabel" parent="mediumLabel">
        <item name="android:textColor">@color/lighterText</item>
    </style>
    <style name="mediumDarkLabel" parent="mediumLabel">
        <item name="android:textColor">@color/darkerText</item>
    </style>

</resources>