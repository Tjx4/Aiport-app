<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AirportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAirportIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_airport_frag"/>

            <LinearLayout
                android:background="@color/lightBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgAirportIcon"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/small_view_margin"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvAirportName"
                    android:singleLine="true"
                    style="@style/largeDarkTextView" />

                <TextView
                    android:id="@+id/tvdistanceFromUser"
                    style="@style/mediumDarkTextView"/>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btnDepartures"
            style="@style/mediumButton"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_view_margin"
            android:layout_marginBottom="@dimen/small_view_margin"
            android:text="Departures" />
    </LinearLayout>



</FrameLayout>